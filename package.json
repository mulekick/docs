{
    "name": "example-nextjs-markdown",
    "version": "0.1.0",
    "private": true,
    "description": "Personal documentation website built using next.js static site generation features",
    "type": "module",
    "scripts": {
        "dev": "next dev . -p 8085",
        "lint": "next lint",
        "build": "next build .",
        "prod": "next start . -p 8080",
        "reset": "rm -rf .next build out standalone",
        "predeploy": "npm run build",
        "deploy": "gh-pages --dist build --branch static --message \"rebuild\"",
        "live": "docker container run --rm -d --mount type=bind,source=$(realpath build),target=/data/static,ro=true -p 8080:80 mulekick/serve-static:latest > /tmp/static-container-id",
        "die": "docker container stop $(cat /tmp/static-container-id) && rm /tmp/static-container-id"
    },
    "dependencies": {
        "@octokit/core": "^4.2.1",
        "github-markdown-css": "^5.2.0",
        "gray-matter": "^4.0.3",
        "readdirp": "^3.6.0",
        "next": "^13.4.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@mulekick/eslint-config-muleslint": "^1.0.2",
        "@next/eslint-plugin-next": "^13.4.3",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "gh-pages": "^5.0.0",
        "sharp": "^0.32.1",
        "sass": "^1.62.1"
    },
    "engines": {
        "node": ">=16.16.0",
        "npm": ">=8.15.1"
    },
    "os": [
        "linux"
    ],
    "author": "mulekick <moolekick@gmail.com> (https://github.com/mulekick)",
    "license": "MIT",
    "repository": {},
    "bugs": {},
    "homepage": "https://github.com/mulekick/docs"
}
